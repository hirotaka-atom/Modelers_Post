<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center title-text">ユーザー一覧</h1>
        <h4 class="text-center"><%= paginate @users %></h4>
        <ul class="users">
          <% @users.each do |user| %>
            <li class="user-info">
              <div class="user-details">
                <%= image_tag user.image.url %>
                <%= link_to user.name, user %>
              </div>
            </li>
          <% end %>
        </ul>
        <h4 class="text-center"><%= paginate @users %></h4>
      </div>
    </div>
  </div>
</div>
