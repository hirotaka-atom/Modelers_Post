<div class="users-new-wrapper text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="title-text">ユーザー一覧</h1>
        <h4><%= paginate @users %></h4>
        <ul class="users">
          <% @users.each do |user| %>
            <li class="user-info">
              <div class="user-details">
                <div class="row">
                  <div class="col-md-4">
                    <%= image_tag user.image.url %>
                  </div>
                  <div class="col-md-8">
                    <h3><%= link_to user.name, user %><h3>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
        <h4><%= paginate @users %></h4>
      </div>
    </div>
  </div>
</div>
