<ul class="menu">
<li>
  <%= link_to  'トップ', root_path %>
</li>
<% if logged_in? %>
  <li class="sub-menu">
    <a href="javascript:void(0);">アカウント</a>
    <ul class="dropdown-menu">
      <li>
        <%= link_to "#{current_user.name}", "/users/#{current_user.id}" %>
      </li>
      <li>
        <%= link_to 'ログアウト', logout_path, method: :delete %>
      </li>
    </ul>
  </li>
  <li>
    <%= link_to '新規投稿', new_post_path %>
  </li>
<% else %>
  <li>
    <%= link_to '当アプリについて', pages_about_path %>
  </li>
  <li>
    <%= link_to '新規登録', new_user_path %>
  </li>
  <li>
    <%= link_to 'ログイン', login_path %>
  </li>
<% end %>
<li>
  <%= link_to '投稿一覧', posts_path %>
</li>
<li class="event">
  <%= link_to 'イベント情報', events_path %>
</li>
<li class="search-form">
  <%= search_form_for @q, url: search_index_path do |f| %>
  <%= f.search_field :user_name_or_post_tag_name_or_title_or_content_cont, required: true %>
  <%= f.submit '検索する' %>
  <% end %>
</li>
</ul>
