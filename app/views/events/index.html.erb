<div class="users-new-wrapper text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h1 class="title-text">イベント一覧</h1>
        <h4 class="new_tag_link"><%= link_to 'イベント作成', new_event_path %></h4>
        <h4><%= paginate @events %></h4>
        <ul class="tags">
          <% @events.each do |event| %>
            <li class="tag-info">
              <div class="row">
                <h2><%= event.name %></h2>
                <p><a href="<%= event.url %>">詳細はこちら</a></p>
                <div class="col-md-4 col-md-offset-4">
                  <div class="row">
                    <% if current_user.present? && current_user.admin == true %>
                      <div class="col-md-6">
                        <p><%= link_to '編集', edit_event_path(id: event.id) %></p>
                      </div>
                      <div class="col-md-6">
                        <p><%= link_to '削除', event_path(id: event.id), method: :delete %></p>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
        <h4><%= paginate @events %></h4>
      </div>
    </div>
  </div>
</div>
