<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center title-text">お気に入り登録したユーザー</h1>
        <h4 class="text-center"><%= paginate @favorites %></h4>
        <ul class="users">
          <% @favorites.each do |favorite| %>
            <li class="user-info">
              <div class="user-details">
                <%= image_tag favorite.user.image.url %>
                <%= link_to favorite.user.name, favorite.user %>
              </div>
            </li>
          <% end %>
        </ul>
        <h4 class="text-center"><%= paginate @favorites %></h4>
      </div>
    </div>
  </div>
</div>
