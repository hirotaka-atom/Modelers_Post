<div class="posts-new-wrapper text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
       <h1 class="title-text">新しい投稿はこちら</h1>
       <div class="top-info">
         <% if @posts.present? %>
          <div class="row">
            <% @posts.each do |post| %>
              <div class="col-md-2 top-post-info">
                <%= image_tag post.image.url %>
                <p><%= post.post_tag.name %>タグ</p>
                <p><%= link_to post.title.truncate(11, omission: '...'), post %></p>
              </div>
            <% end %>
          </div>
          <h4><%= paginate @posts %></h4>
        <% else %>
          <h3>投稿がありません</h3>
        <% end %>
       </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
       <h1 class="title-text">注目度ランキング</h1>
       <div class="ranking-info">
         <% if @rankings.present? %>
          <div class="row">
            <% @rankings.each.with_index(1) do |rank, i| %>
              <div class="col-md-4 top-post-info">
                <h3><%= "#{i}" %>位</h3>
                <%= image_tag rank.image.url %>
                <p><%= rank.post_tag.name %>タグ</p>
                <p><%= link_to rank.title.truncate(11, omission: '...'), rank %></p>
              </div>
            <% end %>
          </div>
        <% else %>
          <h3>投稿がありません</h3>
        <% end %>
       </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
       <h1 class="title-text">まだ見られていない投稿はこちら</h1>
       <div class="top-info">
        <% if @unlikes.present? %>
         <div class="row">
          <% @unlikes.each do |unlike| %>
            <div class="col-md-2 top-post-info">
              <%= image_tag unlike.image.url %>
              <p><%= unlike.post_tag.name %>タグ</p>
              <p><%= link_to unlike.title.truncate(11, omission: '...'), unlike %></p>
            </div>
          <% end %>
         </div>
        <% else %>
          <h3>投稿がありません</h3>
        <% end %>
       </div>
      </div>
    </div>
  </div>
</div>
