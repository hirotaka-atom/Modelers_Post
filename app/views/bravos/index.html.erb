<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center title-text">いいねしたユーザー</h1>
        <h4 class="text-center"><%= paginate @bravos %></h4>
        <ul class="users">
          <% @bravos.each do |bravo| %>
            <li class="user-info">
              <div class="user-details">
                <%= image_tag bravo.user.image.url %>
                <%= link_to bravo.user.name, bravo.user %>
              </div>
            </li>
          <% end %>
        </ul>
        <h4 class="text-center"><%= paginate @bravos %></h4>
      </div>
    </div>
  </div>
</div>
