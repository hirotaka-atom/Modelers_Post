<div class="posts-new-wrapper">
  <div class="container">
  <div class="posts">
    <div class="post-info">
      <div class="user-details">
        <%= image_tag @post.user.image.url %>
        <p class="text-center"><%= link_to @post.user.name, @post.user %></p>
      </div>
      <div class="post-details">
        <div class="text-center post-title">
          <h3><%= @post.title %></h3>
          <h7>投稿タグ: <%= @post.post_tag.name %></h7>
        </div>
        <div class="post-contents">
          <%= image_tag @post.image.url %>
          <p><%= @post.content %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="text-center post-action">
  <div class="post-bravo">
  <% if !@post.bravo_users.include?(current_user) %>
  <%= link_to 'いいねする', new_post_bravo_path(post_id: @post.id) %>
  <% else %>
    <%= link_to 'いいねを解除する', post_bravo_path(post_id: @post.id), method: :delete %>
  <% end %>
  <p>いいね数: <%= Bravo.where(post_id: @post.id).count %></p>
  </div>
  <div class="post-favorite">
  <% if !@post.favorite_users.include?(current_user) %>
    <%= link_to 'お気に入り登録する', favorites_path(post_id: @post.id), method: :post %>
  <% else %>
    <%= link_to 'お気に入りを解除する', favorite_path(post_id: @post.id), method: :delete %>
  <% end %>
  <p>お気に入り登録者数: <%= Favorite.where(post_id: @post.id).count %></p>
  </div>
  <div class="post-delete">
    <%= link_to '投稿を削除する', post_path(id: @post.id), method: :delete %>
  </div>
  <div class="post-view">
    <h1>閲覧数: <%= @post.impressionist_count %></h1>
  </div>
  </div>
  <div class="bravo-details">
    <h3>いいねの詳細</h3>

  </div>
  </div>
</div>
